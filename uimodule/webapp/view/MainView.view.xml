<mvc:View
	controllerName="com.example.myUI5App.controller.MainView"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
>
	<App id="idAppControl">
		<pages>
			<Page 
			 title="{i18n>title}">
				<content>
				
					<t:Table
						rows="{/}"
						selectionMode="MultiToggle"
						visibleRowCount="20"
						ariaLabelledBy="title"						
					>
						<t:extension>
							<OverflowToolbar style="Clear">
								<Title
									id="title"
									text="Todos"
								/>
							</OverflowToolbar>
						</t:extension>
						<t:columns>
						<t:Column width="8rem">
								<Label text="Id"/>
								<t:template>
									<Text
										text="{id}"
										wrapping="false"
									/>
								</t:template>
							</t:Column>
							<t:Column width="8rem">
								<Label text="User Id"/>
								<t:template>
									<Text
										text="{userId}"
										wrapping="false"
									/>
								</t:template>
							</t:Column>							
							<t:Column>
								<Label text="Title"/>
								<t:template>
									<Text
										text="{title}"
										wrapping="false"
									/>
								</t:template>
							</t:Column>
							<t:Column width="8rem">
								<Label text="Completed"/>
								<t:template>
									<Text
										text="{completed}"
										wrapping="false"
									/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>